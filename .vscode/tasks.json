{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Win64",
            "identifier": "build_binary_win64",
            "type": "shell",
            "command": "msbuild",
            "args": [
                // Ask msbuild to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                "/t:build",
                "${workspaceFolder}//__build//win64//TypeScriptLUA.sln"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile",
            "dependsOn": "build_source_win64"
        },
        {
            "label": "Build VS2017 Win64 source",
            "identifier": "build_source_win64",
            "group": "build",
            "isBackground": true,
            "type": "shell",
            "command": "${workspaceFolder}\\build.cmd win64",
            "problemMatcher": []
        },
        {
            "label": "Build MinGW32 source/binary",
            "identifier": "build_source_mingw32",
            "group": "build",
            "isBackground": true,
            "type": "shell",
            "command": "${workspaceFolder}\\build.cmd mingw32",
            "problemMatcher": []
        }
    ]
}