{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Win64 Debug",
            "identifier": "build_binary_win64_debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/t:build",
                "/p:Configuration=Debug",
                "${workspaceFolder}//__build//win64//TypeScriptLUA.sln"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "build_source_win64_debug"
        },
        {
            "label": "build Win64 Release",
            "identifier": "build_binary_win64_release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/t:build",
                "/p:Configuration=Release",
                "${workspaceFolder}//__build//win64//TypeScriptLUA.sln"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "build_source_win64_release"
        },
        {
            "label": "Build VS2017 Win64 source - Debug",
            "identifier": "build_source_win64_debug",
            "group": "build",
            "isBackground": true,
            "type": "shell",
            "command": "${workspaceFolder}\\build.cmd",
            "args": [
                "win64",
                "Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build VS2017 Win64 source - Release",
            "identifier": "build_source_win64_release",
            "group": "build",
            "isBackground": true,
            "type": "shell",
            "command": "${workspaceFolder}\\build.cmd",
            "args": [
                "win64",
                "Release"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build MinGW32 source/binary - Debug",
            "identifier": "build_source_mingw32_debug",
            "group": "build",
            "isBackground": true,
            "type": "shell",
            "command": "${workspaceFolder}\\build.cmd",
            "args": [
                "mingw32",
                "Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build MinGW32 source/binary - Release",
            "identifier": "build_source_mingw32_release",
            "group": "build",
            "isBackground": true,
            "type": "shell",
            "command": "${workspaceFolder}\\build.cmd",
            "args": [
                "mingw32",
                "Release"
            ],
            "problemMatcher": []
        },
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},        
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                "$eslint-compact"
            ]
        }
    ]
}