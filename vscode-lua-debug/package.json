{
    "name": "lua-debug",
    "displayName": "Lua Debug",
    "version": "0.0.0",
    "publisher": "AlexD77",
    "description": "Lua debugger extension for VS Code.",
    "author": {
        "name": "Alex D."
    },
    "license": "MIT",
    "keywords": [
        "lua debugger"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ASDAlexander77/TypeScriptLua/tree/master/vscode-lua-debug"
    },
	"engines": {
        "vscode": "^1.18.0",
        "node": "^7.9.0"
    },
    "categories": [
        "Debuggers"
    ],
    "private": true,
    "scripts": {
        "prepublish": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "tslint": "tslint ./src/**/*.ts",
        "watch": "tsc -w -p ./src",
        "test": "mocha -u tdd ./out/tests/",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "dependencies": {
        "await-notify": "1.0.1",
        "vscode-debugadapter": "1.27.0",
        "vscode-debugprotocol": "1.27.0"
    },
    "devDependencies": {
        "@types/node": "7.0.55",
        "@types/mocha": "2.2.48",
        "typescript": "2.6.2",
        "mocha": "5.0.1",
        "vscode": "1.1.17",
        "vscode-debugadapter-testsupport": "1.27.0",
        "tslint": "5.9.1",
        "vsce": "1.37.5"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onDebug",
        "onCommand:extension.lua-debug.getProgramName"
    ],
    "contributes": {
        "breakpoints": [
            {
                "language": "lua"
            }
        ],
        "debuggers": [
            {
                "type": "lua",
                "label": "Lua Debug",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to a text file.",
                                "default": "${workspaceFolder}/${command:AskForProgramName}"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": true
                            },
                            "trace": {
                                "type": "boolean",
                                "description": "Enable logging of the Debug Adapter Protocol.",
                                "default": true
                            },
                            "luaExecutable": {
                                "type": "string",
                                "description": "Absolute path to a lua executable.",
                                "default": "lua"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "lua",
                        "request": "launch",
                        "name": "Ask for file name",
                        "program": "${workspaceFolder}/${command:AskForProgramName}",
                        "luaExecutable": "lua",
                        "stopOnEntry": true
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Lua Debug: Launch",
                        "description": "A new configuration for 'lua-debugging' a user selected lua file.",
                        "body": {
                            "type": "lua",
                            "request": "launch",
                            "name": "Ask for file name",
                            "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
                            "luaExecutable": "lua",
                            "stopOnEntry": true
                        }
                    }
                ],
                "variables": {
                    "AskForProgramName": "extension.lua-debug.getProgramName"
                }
            }
        ]
    }
}