{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm",
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "(.*)",
                    "message": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Generating",
                    "endsPattern": "generated"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}